    ViewData["Title"] = "AddDetails";
}

<h1>AddDetails</h1>

<h4>AddMoreTrainerDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
