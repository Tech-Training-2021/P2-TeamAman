                <label for="Skill_Id">Skills</label>
                <select class="form-control" asp-for="Skill_Id" asp-items="@(new SelectList(ViewBag.message,"Id","Name"))"></select>
                <span asp-validation-for="Skill_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
